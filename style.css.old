:root {
    --primary-color: #009379;
    --shadow: 34px 29px 40px #3366FF10;
}

body {
    margin: 0;
    padding: 0;
    background-color: #f8f9ff;
    font-family: "Poppins", serif;
    /* overflow-x: hidden; */
}

.header__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20px 50px;
}

.header__menu {
    display: flex;
    align-items: center;
}

.header__main-buttons {
    display: flex;
    gap: 20px;
}

.header__link-button {
    margin-right: 50px;
}

.button {
    height: 60px;
    width: fit-content;

    padding: 0 50px;

    border-radius: 20px;
    border: none;
    background-color: transparent;

    font-family: "Poppins", serif;
    color: var(--primary-color);
    font-size: 12pt;
    font-weight: 600;

    cursor: pointer;
}

.button--filled-light {
    background-color: #e5f4f2;
}

.button--filled-light:hover {
    background-color: #d4ebe8;
}

.button--filled-white {
    background-color: white;
}

.button--filled-white:hover {
    background-color: #d4ebe8;
}

.button--filled-dark {
    background-color: var(--primary-color);
    color: white;
}

.button--filled-dark:hover {
    background-color: #00745e;
}

.button--outlined {
    background-color: #ffffff;
    border: 1px solid var(--primary-color);
}

.button--outlined:hover {
    background-color: #dddddf;
}

.link-button {
    font-family: "Poppins", serif;
    color: var(--primary-color);
    font-size: 12pt;
    font-weight: 600;

    text-decoration: none;
    cursor: pointer;
}

.link-button:hover {
    color: #00745e;
}

.layout {
    display: flex;
    flex-direction: column;
    justify-self: center;
    align-items: center;
}

.intro__container,
.cta__container {
    width: 1170px;

    padding: 120px 55px;

    display: flex;
    align-items: center;
    justify-content: space-between;
}

.intro__text {
    width: 648px;
}

.intro__title {
    margin: 0;
    font-size: 52pt;
    line-height: 130%;
    letter-spacing: -2.5pt;
    color: #2d2d2d;
}

.intro__subtitle,
.cta__subtitle {
    font-size: 14pt;
    margin-top: 20px;
}

.intro__buttons-row,
.cta__buttons-row {
    margin-top: 40px;

    display: flex;
    gap: 18px;
}

.sponsors__container {
    padding: 60px 0;
    margin: 60px 55px;

    border-top: 1px solid #D8D8D8;
    border-bottom: 1px solid #D8D8D8;
}

.sponsors__list {
    width: 80vw;

    display: flex;
    align-items: center;
    justify-content: space-between;
}

.features__container,
.metrics__container,
.reviews__container,
.plans__container,
.team__container {
    margin: 120px 55px;
}

.features__text,
.metrics__text,
.reviews__text,
.plans__text,
.team__text {
    text-align: center;
    margin-bottom: 60px;
}

.features__title,
.metrics__title,
.reviews__title,
.plans__title,
.team__title {
    font-size: 28pt;
    line-height: 130%;
    margin: 0;
}

.features__list {
    display: flex;
    gap: 30px;
}

.feature-card {
    height: 100%;
    min-height: 400px;
    width: 370px;

    background-color: white;
    border-radius: 20px;
    box-shadow: var(--shadow);
}

.feature-card__container {
    height: 100%;
    margin: 40px 30px;

    display: flex;
    flex-direction: column;
    justify-content: space-between;
    text-align: center;
}

.feature-card__info {
    height: fit-content;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.feature-card__icon-container {
    height: 82px;
    width: 82px;

    display: flex;
    align-items: center;
    justify-content: center;

    border-radius: 20px;
}

.feature-card__icon-container--red {
    background-color: #ffe0dc;
}

.feature-card__icon-container--green {
    background-color: #cce9e4;
}

.feature-card__icon-container--yellow {
    background-color: #fef7e5;
}

.feature-card__link-button .link-button__text {
    margin: 0;
}

.metrics__list {
    display: flex;
    gap: 30px;
}

.metric-card {
    height: 171px;
    width: 270px;

    background-color: white;
    border-bottom: 4px solid #f2bfaf;
    border-radius: 20px 20px 0 0;
    box-shadow: var(--shadow);
}

.metric-card__container {
    height: 100%;

    display: flex;
    flex-direction: column;
    justify-content: center;
    justify-self: center;
    align-items: center;
}

.metric-card__title {
    margin: 0 0 5px 0;

    font-size: 28pt;
    line-height: 130%;
    color: #2d2d2d;
}

.metric-card__subtitle {
    margin: 0;
    padding: 0;
}

.cta__text {
    width: 570px;
}

.cta__title {
    margin: 0;

    font-size: 34pt;
    line-height: 130%;
    letter-spacing: -0.5pt;
}

.review-card {
    width: 350px;

    background-color: white;
    border-radius: 20px;
    border: 1px solid #e5f4f2;
    box-shadow: var(--shadow);
}

.review-card__container {
    padding: 40px 30px;
    height: 400px;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.review-card__info {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.review-card__client-info {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.review-card__person-details {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.review-card__photo {
    width: 56px;
    margin-bottom: 16px;

    border-radius: 100%;
}

.review-card__person-name {
    margin: 0;
    font-size: 18pt;
    font-weight: 600;
    line-height: 130%;
}

.review-card__person-description {
    margin: 6px 0 30px 0;
    font-size: 11pt;
    font-weight: 400;
    line-height: 160%;
}

.review-card__text {
    margin: 0;
    text-align: center;
    font-size: 12pt;
    line-height: 150%;
    font-weight: 400;
}

.reviews__list {
    display: flex;
    gap: 30px;
}

.plan-card {
    width: 370px;
    height: 424px;
    border-radius: 20px;
    box-shadow: var(--shadow);
}

.plan-card__container {
    padding: 40px 30px;
}

.plan-card--white {
    background-color: white;
}

.plan-card__name {
    margin: 0;
    font-size: 21px;
    line-height: 150%;
    font-weight: 400;
    color: #2d2d2d;
}

.plan-card__price {
    margin-bottom: 6px;
    display: flex;
    gap: 12px;
    align-items: end;
}

.plan-card__price-dollars {
    margin: 6px 0 0 0;
    font-size: 40pt;
    color: #2d2d2d;
    line-height: 130%;
}

.plan-card__per-month {
    margin: 0 0 8px 0;
    font-size: 16px;
    line-height: 160%;
    font-weight: 600;
    color: #3B3B3B;
}

.plan-card__description {
    margin: 0;
    font-size: 16px;
    line-height: 160%;
}

.plan-card__info {
    margin-bottom: 24px;
}

.plan-card__features {
    margin-bottom: 30px;
}

.plan-card__features-item {
    list-style-image: url(assets/icons/Check.svg);
    margin-bottom: 16px;
    font-size: 16px;
    line-height: 130%;
    font-weight: 600;
}

.plan-card__button {
    width: 100%;
}

.plans__list {
    display: flex;
    gap: 30px;
}

.plan-card--primary {
    background-color: var(--primary-color);
    color: white;
}

.plan-card--primary .plan-card__name,
.plan-card--primary .plan-card__price-dollars,
.plan-card--primary .plan-card__per-month {
    color: white;
}

.worker {
    width: 370px;
    height: 459px;

    background-color: white;
    border-radius: 20px;
    box-shadow: var(--shadow);
}

.team__workers-list {
    display: flex;
    gap: 30px;
}

.worker__photo {
    width: 100%;
    height: 278px;
    object-fit: cover;

    border-radius: 20px 20px 0 0;
}

.worker__info {
    margin-top: 20px;
    text-align: center;

    border-bottom: 1px solid #d8d8d8;
}

.worker__name {
    margin: 0;
    margin-bottom: 6px;
    color: #111827;
    font-size: 21px;
    line-height: 130%;
    font-weight: 600;
}

.worker__job {
    margin: 0;
    margin-bottom: 20px;
    color: #2D2D2D;
    font-size: 16px;
}

.links__link {
    display: flex;
    align-items: center;
    justify-content: center;

    height: 32px;
    width: 32px;
    background-color: #e5f4f2;
    border-radius: 100%;
}

.worker__links {
    margin: 20px 0 30px 0;
}

.links {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
}

.get-today {
    width: 100%;
}

.get-today__container {
    margin: 60px 55px;
    display: flex;
    justify-content: center;
}

.get-today-card {
    max-width: 1170px;
    display: flex;

    background-color: #f2bfaf;
    border-radius: 20px;
}

.get-today-card__content {
    width: 50%;
    padding: 60px
}

.get-today-card__text {
    padding-bottom: 40px;
}

.get-today-card__title {
    margin: 0;
    margin-bottom: 20px;
    color: #2d2d2d;
    font-size: 50px;
    line-height: 130%;
    font-weight: 700;
}

.get-today-card__subtitle {
    margin: 0;
    color: #2d2d2d;
    font-size: 21px;
    line-height: 150%;
}

.get-today-card__mockup {
    width: 50%;
    display: flex;
    align-items: end;
    justify-content: right;
}

.contact {
    width: 100%;
}

.contact__container {
    margin: 60px 55px;
    display: flex;
    justify-content: center;
}

.contact-form {
    width: 100%;
    max-width: 1170px;
    display: flex;

    border-radius: 20px;
    background-color: white;
    border: 1px solid #e5f4f2;
}

.contact-form__container {
    margin: 60px;
    width: 100%;
    display: flex;
    flex-direction: column;
}

.contact-form__content {
    width: 100%;
    display: flex;
    justify-content: space-between;
    gap: 40px;
}

.contact-form__title {
    margin: 0;
    margin-bottom: 10px;
    color: #2d2d2d;
    font-size: 38px;
    line-height: 130%;
    font-weight: 700;
}

.contact-form__subtitle {
    margin: 0;
    color: #2d2d2d;
    font-size: 16px;
    line-height: 150%;
}

.contact-form__text {
    width: 100%;
    margin-bottom: 60px;
}

.contact-form__contact-us {
    width: 465px;
    height: 100%;

    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.contact-form__socials {
    display: flex;
    flex-direction: column;
    align-items: start;
    gap: 20px;
}

.contact-form__socials-text {
    margin: 0;
    color: #2d2d2d;
    font-size: 21px;
    line-height: 130%;
    font-weight: 600;
}

.contact-form__form {
    width: calc(100% - 465px);
    margin-right: 80px;
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.contact-form__textfields {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

/* Footer */
.footer {
    height: 100%;
    background-color: #2d2d2d;
}

.footer__container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px 60px;
}

.footer__copyright-text {
    margin: 0;
    line-height: 20px;
    font-size: 14px;
    color: white;
    font-weight: 300;
}

/* Textfield */
.textfield {
    width: 100%;
    height: 60px;
    background-color: white;
    border-radius: 20px;
    border: 1px solid #d8d8d8;
}

.textfield__container {
    margin: 0 20px 0 20px;
    height: 100%;
    display: flex;
    align-items: center;
}

.textfield__icon {
    padding-right: 8px;
    border-right: 1px solid #dbe3ff;
}

.textfield__input {
    margin: 0;
    margin-left: 12px;
    font-size: 16px;
    line-height: 150%;
    width: 100%;
    border-style: none;
}

.textfield__input:focus {
    outline: none;
}